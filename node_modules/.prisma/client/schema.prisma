generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id               Int      @id @default(autoincrement())
  email            String   @unique
  NID              String   @unique
  account_number   Int      @unique
  date_of_birth    DateTime
  first_name       String
  gender           String
  last_name        String
  role             String
  telephone_number String   @unique
}

model ArcadeBookings{
