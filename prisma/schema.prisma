model Discount {
  discount_id         Int    @id @default(autoincrement())
  discount_percentage Int
  description         String
  discount_image      String
}

model CoachAssignDetails {
  assign_id   Int    @id @default(autoincrement())
  // coach_id String
  // arcade_id String
  rate        String
  duration    String
  description String
  // assign_date String
  // state String
  coach_image String
}

model ArcadeFeedbacks {
  feedbacks_id Int    @id @default(autoincrement())
  description  String
}




model User {
  user_id       String         @id @unique
  role          String
  firstname     String
  lastname      String
  email         String         @unique
  password      String
  phone         String
  DOB           String?
  gender        String
  accountNumber Int?
  Player        Player?
  Coach         Coach?
  Manager       ArcadeManager?
}

model Player {
  player_id String @id @unique
  user      User   @relation(fields: [player_id], references: [user_id])
}

model Coach {
  coach_id String @id @unique
  sport    String
  user     User   @relation(fields: [coach_id], references: [user_id])
}

model ArcadeManager {
  manager_id String   @id @unique
  user       User     @relation(fields: [manager_id], references: [user_id])
  arcade     Arcade[]
}

model Arcade {
  arcade_id    String        @id
  arcade_name  String
  location     String
  address      String?
  arcade_email String
  mgr_id       String
  manager      ArcadeManager @relation(fields: [mgr_id], references: [manager_id])
}
model ArcadeRatings{
  rating_id Int @id @default(autoincrement())
  rating Int
  discription String
}

