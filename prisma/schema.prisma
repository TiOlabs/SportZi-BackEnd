generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model ArcadeBooking{
  id              Int      @id @default(autoincrement())
  // user_id         Int
  // arcade_id       Int
  booking_date    String
  booking_time    String 
  zone            String
  participant_count    Int

  // booking_status  String
  // booking_type    String
  // created_at      DateTime @default(now())
  // updated_at      DateTime @updatedAt
  // user            User     @relation(fields: [user_id], references: [id])
  // arcade          Arcade   @relation(fields: [arcade_id], references: [id])
}
model User{
  id              Int      @id @default(autoincrement())
  user_id         Int
  arcade_id       Int
  booking_date    String
  booking_time    String 

  booking_status  String
  booking_type    String
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  // user            User     @relation(fields: [user_id], references: [id])
  // arcade          Arcade   @relation(fields: [arcade_id], references: [id])
}
model Discount{
  discount_id Int @id @default(autoincrement())
  discount_percentage Int
  description String
  discount_image String

}

model CoachAssignDetails{
  assign_id Int @id @default(autoincrement())
  // coach_id String
  // arcade_id String
  rate String
  duration String
  description String
  // assign_date String
  // state String
  coach_image String
}

model ArcadeFeedbacks{
  feedbacks_id Int @id @default(autoincrement())
  description String
  
}
model Player {
  player_id        Int      @id @default(autoincrement())
  firstname String
  lastname  String
  email     String   @unique
  password  String  
  phone     String
  dob       String
  gender    String
  address   String?
  account_number Int?
}

model Coach {
  coach_id    Int       @id @default(autoincrement())
  firstname String
  lastname  String
  email     String    @unique
  password  String
  phone     String
  dob       String
  gender    String
  sport     String
  address   String?
  account_number Int?

}


model ArcadeManager {
  arcadeManager_id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  phone     String
  opentime  String
  closetime String
  address   String?
  account_number Int?
}